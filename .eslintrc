{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },
  "plugins": [
    "react"
  ],
  "extends": [
    "airbnb"
  ],
  "rules": {
    "react/jsx-no-undef": 1,
    "no-plusplus": "off",
    "jsx-a11y/href-no-hash": "off",
    "jsx-a11y/anchor-is-valid": "off",
    "import/prefer-default-export": "off",
    "no-debugger": "error",
    "no-alert": "error",
    "no-console": "error",
    "import/no-cycle": 0,
    "linebreak-style": 0,
    "max-len": [
      "error",
      {
        "code": 120,
        "tabWidth": 2
      }
    ],
    "react/display-name": [
      "error",
      {
        "ignoreTranspilerName": true
      }
    ],
    "react/prefer-stateless-function": "error"
  },
  "env": {
    "browser": true
  }
}
